bunga <- function(num, A, k, t, m=TRUE)
  switch(num, 
         satu= {
           tunggal = (A/k-1)/t
           print(tunggal)
         },
         dua = {
           nominal = ((A/k)^(1/(m*t))-1)*m
           print(nominal)
         },
         tiga ={
           kontinu = (log(A/k))/t
           print(kontinu)
         }
  )
